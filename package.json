{
  "name": "grawiki",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:front": "lerna run --scope=@grawiki/frontend start",
    "dev:front": "lerna run --scope=@grawiki/frontend dev",
    "start:back": "lerna run --scope=@grawiki/backend start",
    "dev:back": "lerna run --scope=@grawiki/backend dev",
    "start:all": "lerna run --parallel start",
    "dev:all": "lerna run --parallel dev",
    "storybook": "lerna run --scope=@grawiki/frontend storybook",
    "chromatic": "lerna run --scope=@grawiki/frontend chromatic"
  },
  "devDependencies": {
    "lerna": "^6.6.1"
  }
}
